<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      客服信息
      <small>设置客服的个人信息</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-home"></i>主页</a></li>
      <li class="active">客服信息</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

    <div class="row">
      <div class="col-md-12">

        <div class="box box-info widget-user-2">

          <div class="box-header">
            <div class="col-md-2 block">
              <img class="img-circle" src="./images/staff1-128x128.jpg" alt="User Avatar">
            </div>
            <div class="col-md-2">
              <h3><%= staff.realname ? staff.realname : staffname %></h3>
              <h5><small>在线客服</small></h5>
              <button class="btn btn-info">更换头像</button>
            </div>


          </div>
          <div class="box-body">
            <form id="profile_form" class="form-horizontal" action="/profile" method="post">

	            <!-- alert message -->
	            <div class="col-md-12">
	              <div class="col-md-2"></div>
	              <% if(success){ %>
	              <div class="alert alert-success col-md-4">
	                <a class="close" data-dismiss="alert" href="#">&times;</a>
	                <strong><%= success %></strong>
	              </div>
	              <% } %>
	              <% if(error){ %>
	              <div class="alert alert-error col-md-4">
	                <a class="close" data-dismiss="alert" href="#">&times;</a>
	                <strong><%= error %></strong>
	              </div>
	              <% } %>
	            </div>

              <div class="form-group">
                <label for="staffname" class="col-md-2 control-label">注册名</label>
                <div class="col-md-4">
                  <input type="text" class="form-control" id="staffname" name="staffname" value="<%= staff.staffname %>" disabled>
                </div>
              </div>
              <div class="form-group">
                <label for="realname" class="col-md-2 control-label">真实名</label>
                <div class="col-md-4">
                  <input type="text" class="form-control" id="realname" name="realname" value="<%= staff.realname %>">
                </div>
              </div>
              <div class="form-group">
                <label for="mobilephone" class="col-md-2 control-label">手机</label>
                <div class="col-md-4">
                  <input type="text" class="form-control" id="mobilephone" name="mobilephone" value="<%= staff.mobilephone %>">
                </div>
              </div>
              <div class="form-group">
                <label for="email" class="col-md-2 control-label">邮箱</label>
                <div class="col-md-4">
                  <input type="text" class="form-control" id="email" name="email" value="<%= staff.email %>">
                </div>
              </div>
              <div class="form-group">
                <label for="greetings" class="col-md-2 control-label">客服问候语</label>
                <div class="col-md-4">
                  <textarea class="form-control" id="greetings" name="greetings" placeholder="会话分配到客服时，将自动发送客服个人的问候语"><%= staff.greetings %></textarea>
                </div>
              </div>
              <input type='hidden' id='action' name='action' value='change_profile'/>
              <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                  <button type="submit" class="btn btn-info">保存设置</button>
                </div>
              </div>
            </form>
          </div>
          <!--<div class="box-footer">-->
          <!--</div>-->
        </div>

	      <div class="box box-info">
		      <div class="box-header">
			      <h4>更改密码</h4>
		      </div>

		      <div class="box-body">
			      <form id="password_form" class="form-horizontal" action="/profile" method="post">

				      <!-- alert message -->
				      <div class="col-md-12">
					      <div class="col-md-2"></div>
					      <% if(changepasssucc){ %>
					      <div class="alert alert-success col-md-4">
						      <a class="close" data-dismiss="alert" href="#">&times;</a>
						      <strong><%= changepasssucc %></strong>
					      </div>
					      <% } %>
					      <% if(changepasserr){ %>
					      <div class="alert alert-error col-md-4">
						      <a class="close" data-dismiss="alert" href="#">&times;</a>
						      <strong><%= changepasserr %></strong>
					      </div>
					      <% } %>
				      </div>

				      <div class="form-group">
					      <label for="oldpassword" class="col-md-2 control-label">当前密码</label>
					      <div class="col-md-4">
						      <input type="password" class="form-control" id="oldpassword" name="oldpassword">
					      </div>
				      </div>
				      <div class="form-group">
					      <label for="newpassword" class="col-md-2 control-label">新密码</label>
					      <div class="col-md-4">
						      <input type="password" class="form-control" id="newpassword" name="newpassword">
					      </div>
				      </div>
				      <input type='hidden' id='action' name='action' value='change_password'/>
				      <div class="form-group">
					      <div class="col-md-offset-2 col-md-4">
						      <button type="submit" class="btn btn-info">更改密码</button>
					      </div>
				      </div>
			      </form>
		      </div>

		      <!--<div class="box-footer">-->
		      <!--</div>-->

	      </div>


      </div>
    </div>

  </section><!-- /.content -->
</div><!-- /.content-wrapper -->
